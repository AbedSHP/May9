string $currentCtx = `currentCtx`;
int $reflectionCheck = `artAttrCtx -q -rn $currentCtx`;
string $reflectionDirection = `artAttrCtx -q -ra $currentCtx`;

    menuItem
        -label "Z Axis" 
        -command "artAttrCtx -e -reflection  true `currentCtx`;\nartAttrCtx -e -ra \"z\" `currentCtx`;" 
        -checkBox ($reflectionDirection == "z") 
        -radialPosition "SE" 
        -sourceType "mel" 
        menuEditorMenuItem1;

    menuItem
        -label "Y Axis" 
        -command "artAttrCtx -e -reflection  true `currentCtx`;\nartAttrCtx -e -ra \"y\" `currentCtx`;" 
        -checkBox ($reflectionDirection == "y") 
        -radialPosition "S" 
        -sourceType "mel" 
        menuEditorMenuItem2;

    menuItem
        -label "X Axis" 
        -command "artAttrCtx -e -reflection  true `currentCtx`;\nartAttrCtx -e -ra \"x\" `currentCtx`;" 
        -checkBox ($reflectionDirection == "x") 
        -radialPosition "SW" 
        -sourceType "mel" 
        menuEditorMenuItem3;

    menuItem
        -label "Symmetry" 
        -command "if ($reflectionCheck == 1) artAttrCtx -e -reflection  false `currentCtx`; else artAttrCtx -e -reflection  true `currentCtx`;" 
        -checkBox $reflectionCheck
        -radialPosition "E" 
        -sourceType "mel" 
        menuEditorMenuItem4;

    menuItem
        -label "Replace" 
        -command "artAttrPaintOperation artAttrCtx Replace;" 
        -radialPosition "N" 
        -sourceType "mel" 
        menuEditorMenuItem5;

    menuItem
        -label "Add" 
        -command "artAttrPaintOperation artAttrCtx Add;" 
        -radialPosition "NE" 
        -sourceType "mel" 
        menuEditorMenuItem6;

    menuItem
        -label "Scale" 
        -command "artAttrPaintOperation artAttrCtx Scale;" 
        -radialPosition "NW" 
        -sourceType "mel" 
        menuEditorMenuItem7;

    menuItem
        -label "Flood Smooth" 
        -command "artAttrPaintOperation artAttrCtx Smooth;\nartAttrCtx -e -clear `currentCtx`;" 
        -radialPosition "W" 
        -sourceType "mel" 
        menuEditorMenuItem8;

setParent -m ..;

