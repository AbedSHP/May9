int $bifrostHUDCheck = `optionVar -q bifrostHUDVisibility`;

    menuItem
        -l "Stop Processing" 
        -c "bifrost -edit -stopProcessing;" 
        -rp "N" 
        -i "kAlertStopIcon.png" 
        menuEditorMenuItem1;

    menuItem
        -l "Bifrost Options" 
        -c "performBifrostOptionsChange" 
        -rp "S" 
        menuEditorMenuItem7;

    menuItem
        -l "Add Foam" 
        -c "AddBifrostFoam" 
        -rp "E" 
        menuEditorMenuItem9;

    menuItem
        -l "Remove Foam" 
        -c "RemoveBifrostFoam" 
        -rp "W" 
        menuEditorMenuItem14;

    menuItem
        -l "Create Cache" 
        -c "performCreateBifrostCache 0 0;" 
        menuEditorMenuItem2;

    menuItem
        -c "performCreateBifrostCache 1 0;\n" 
        -ob 1
        menuEditorMenuItem6;

    menuItem
        -l "Delete Cache" 
        -c "bifrost -edit -flushScratchCache;" 
        menuEditorMenuItem4;

    menuItem
        -l "separator" 
        -d 1;

    menuItem
        -l "HUD Info" 
        -c "ToggleBifrostHUD" 
        -checkBox (1 == $bifrostHUDCheck)
        menuEditorMenuItem12;

setParent -m ..;

