-i "rvViewingPipelineOff.png";

setParent -m ..;

menuItem
-l "separator" 
-d 1;

menuItem
-l "Create Cache" 
-c "performCreateBifrostCache 0 0";

menuItem
-c "performCreateBifrostCache 1 0" 
-ob 1;

menuItem
-l "Delete Cache" 
-c "bifrost -edit -flushScratchCache";

menuItem
-l "separator" 
-d 1;

menuItem
-l "Set Liquid Initial State" 
-c "doSetBifrostInitialState 1 { \"\", \"0\" }" ;

