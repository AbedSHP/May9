global proc Bifrost_MM_May9(){

int $bifrostHUDCheck = `optionVar -q bifrostHUDVisibility`;

menuItem
-l "Stop Processing" 
-c "bifrost -edit -stopProcessing;" 
-rp "N" 
-i "kAlertStopIcon.png";

menuItem
-l "Bifrost Options" 
-c "performBifrostOptionsChange" 
-rp "S";

menuItem
-l "Add Foam" 
-c "AddBifrostFoam" 
-rp "E";

menuItem
-l "Remove Foam" 
-c "RemoveBifrostFoam" 
-rp "W";

menuItem
-l "Add Field" 
-c "AddBifrostMotionField" 
-rp "SE";

menuItem
-l "Remove Field" 
-c "RemoveBifrostField" 
-rp "SW";

menuItem
-l "Add Killplane" 
-c "AddBifrostKillplane" 
-rp "NW";

menuItem
-l "Add Kill Field" 
-c "AddBifrostKillField" 
-rp "NE";

menuItem
-l "Mesh" 
-sm 1;

menuItem
-l "On" 
-c "da_BifrostMesh" 
-i "rvViewingPipelineOn.png";

menuItem
-l "Off" 
-c "da_BifrostNoMesh" 
-i "rvViewingPipelineOff.png";

setParent -m ..;

menuItem
-l "Gravity" 
-sm 1;

menuItem
-l "On" 
-c "da_BifrostGravity" 
-i "rvViewingPipelineOn.png";

menuItem
-l "Off" 
